<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    tools:context=".Fragments.MyProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:elevation="5dp"
                app:srcCompat="@drawable/male"
                tools:targetApi="lollipop" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/myprofile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/rishabh_kumar"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/third_border"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/edit_profile"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/edit"
                android:layout_gravity="end"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/first_name"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/myprofile_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_46sdp"
                    android:background="@drawable/border_2"
                    android:drawableStart="@drawable/person"
                    android:drawablePadding="@dimen/_6sdp"
                    android:maxLines="1"
                    android:hint="@string/first_name"
                    android:paddingStart="@dimen/_6sdp"
                    android:textColor="@color/description"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/last_name"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/myprofile_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_46sdp"
                    android:background="@drawable/border_2"
                    android:drawableStart="@drawable/person"
                    android:drawablePadding="@dimen/_6sdp"
                    android:hint="@string/last_name"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_6sdp"
                    android:textColor="@color/description"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/email"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/myprofile_emailid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_46sdp"
                    android:maxLines="1"
                    android:drawableStart="@drawable/email"
                    android:background="@drawable/border_2"
                    android:hint="@string/email"
                    android:drawablePadding="@dimen/_6sdp"
                    android:paddingStart="@dimen/_6sdp"
                    android:textColor="@color/description"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/MyAccount_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_2"
                android:text="@string/submit"
                android:textColor="@color/white"
                tools:ignore="UnusedAttribute"
                tools:targetApi="m" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>